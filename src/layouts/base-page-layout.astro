---
import '@radix-ui/themes/styles.css';
import 'shared/theme/index.scss';
import { Theme } from '@radix-ui/themes';
import Header from 'widgets/header';
import Footer from 'widgets/footer';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='ru'>
  <head>
    <base href={Astro.url.origin + import.meta.env.BASE_URL} />
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <meta http-equiv='Content-Type' content='text/html; charset=utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <!-- Open Graph /  -->
    <meta property='og:locale' content='ru_RU' />
    <meta property='og:type' content='website' />
    <meta property='og:url' content={Astro.url} />
    <meta property='og:title' content={title} />
    <meta property='og:description' content='Продажа гайдов для путешествия' />
    <meta property='og:site_name' content='Wanderlust' />
  </head>
  <body>
    <Theme
      appearance='light'
      accentColor='teal'
      grayColor='slate'
      radius='large'
      scaling='100%'
      className='theme'
      panelBackground='solid'
    >
      <Header currentPath={Astro.url.pathname} client:load />
      <main class='main'>
        <slot />
      </main>
      <!-- TODO: Links from config -->
      <Footer
        youtubeLink='https://www.youtube.com/@wanderlust'
        telegramLink='https://www.t.me/@wanderlust'
        vkLink='https://www.vk.com/@wanderlust'
        policyLink='https://wanderlust.ru/policy'
      />
    </Theme>
  </body>
</html>

<style>
  html {
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
  body {
    width: 100%;
    min-height: 100%;
    display: flex;
    flex-direction: column;
  }
  .theme {
    display: flex;
    flex-direction: column;
  }
  .main {
    flex-grow: 1;
  }
</style>
